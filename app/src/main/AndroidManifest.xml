<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miitchatapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/miit_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/miit_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ImageViewActivity" />
        <activity
            android:name=".activity.ChatActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity
            android:name=".activity.FindFriendActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.PhoneLoginActivity" />
        <activity
            android:name=".activity.SettingActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/RegisterTheme" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>